<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burgundy"
    android:id="@+id/lightControl">


    <Switch
        android:id="@+id/switchLight"
        android:layout_width="123dp"
        android:layout_height="66dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="116dp"
        android:text="@string/on_off"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="@string/light_schedule"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchLight" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/textwidth"
        android:layout_height="@dimen/textheight"
        android:layout_marginEnd="72dp"
        android:gravity="center"
        android:text="@string/end_time"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/textwidth"
        android:layout_height="@dimen/textheight"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/start_time"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/light_control"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/light_bulb"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="145dp"
        android:layout_height="86dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Light Duration"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchLight" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/home"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />


    <Spinner
        android:id="@+id/spinnerDur"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/switchLight" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:text="Confirm Selected \n Time's"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="81dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/spinnerEndHour"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEndMin" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="81dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStartHour" />

    <Spinner
        android:id="@+id/spinnerStartHour"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spinnerEndHour"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerEndMin"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/spinnerStartMin"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/spinnerStartHour"
        app:layout_constraintTop_toTopOf="@+id/spinnerStartHour" />

    <Spinner
        android:id="@+id/spinnerEndMin"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerEndHour" />


    <RadioGroup
        android:id="@+id/start_am_pm"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStartHour">

        <RadioButton
            android:id="@+id/startAmBtn"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:checked="true"

            android:text="AM" />

        <RadioButton
            android:id="@+id/startPmBtn"
            android:layout_width="wrap_content"
            android:layout_height="27dp"

            android:text="PM" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/end_am_pm"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/spinnerEndHour"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStartHour" >

        <RadioButton
            android:id="@+id/endAmBtn"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:checked="true"

            android:text="AM" />

        <RadioButton
            android:id="@+id/endPmBtn"
            android:layout_width="match_parent"
            android:layout_height="27dp"

            android:text="PM" />
    </RadioGroup>

    <TextView
        android:id="@+id/dateDetectedTv"
        android:layout_width="150dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869" />

</androidx.constraintlayout.widget.ConstraintLayout>